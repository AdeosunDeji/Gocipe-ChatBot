{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "camelcase": "off",
        "allowShortCircuit": "off",
        "no-unused-expressions": "off",
        "allowTernary": "off",
        "no-console": "off",
        "linebreak-style": "off",
        "consistent-return": "off",
        "arrow-body-style": "off",
        "import/no-dynamic-require": "off",
        "import/no-extraneous-dependencies": "off",
        "no-unused-vars": "off",
        "prefer-const": "off",
        "no-useless-catch": "off",
        "no-restricted-syntax": "off",
        "guard-for-in": "off",
        "comma-dangle": "off",
        "no-undef": "off",
        "no-underscore-dangle": "off",
        "no-shadow": "off",
        "max-len": "off",
        "no-plusplus": "off",
        "no-throw-literal": "off",
        "no-param-reassign": "off",
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "double"
        ]
    }
}